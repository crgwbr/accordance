{
  "name": "accordance",
  "version": "0.6.0",
  "description": "A wrapper around unison to provide cross-platform, automatic, bidirectional file syncing",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "scripts": {
    "preversion": "npm run lint",
    "version": "npm run build && git add --all",
    "postversion": "git push && git push --tags",
    "lint": "eslint -c .eslintrc.json --ext .ts --ext .js ./src",
    "build": "rm -rf ./dist && tsc -p tsconfig.json",
    "develop": "tsx ./src/main.ts"
  },
  "repository": "git@github.com:crgwbr/accordance.git",
  "author": "Craig Weber <crgwbr@gmail.com>",
  "license": "ISC",
  "private": false,
  "bin": {
    "accordance": "./dist/main.js"
  },
  "devDependencies": {
    "@thelabnyc/standards": "^0.2.1",
    "@tsconfig/node16": "^16.1.3",
    "@types/js-yaml": "^4.0.5",
    "@types/request": "^2.48.8",
    "@types/request-promise-native": "^1.0.18",
    "@types/ssh2": "^1.11.7",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "tslint": "^6.1.3",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^12.1.0",
    "axios": "^1.7.2",
    "chokidar": "^3.5.3",
    "colors": "^1.3.0",
    "commander": "^12.1.0",
    "fp-ts": "^2.13.1",
    "io-ts": "^2.2.20",
    "js-yaml": "^4.1.0",
    "ssh2": "^1.11.0"
  }
